<% layout("/layouts/boilerplate") %>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= event.name %>: Innovate Beyond Limits</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9fafc;
        }

        header {
    background: linear-gradient(135deg,#0927eb, #868dec );
    color: white;
    padding: 1px 5px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 10px rgba(99, 19, 19, 0.2);
}


        header h1 {
            margin: 0;
        }

        .container {
            display: flex;
            max-width: 1200px;
            margin: 20px auto;
            gap: 20px;
        }

        .main-content {
            flex: 2;
            background: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .sidebar {
            flex: 1;
            background: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #000000;
            margin-top: 0;
        }

        .hero {
            text-align: center;
            margin-bottom: 20px;
        }

        .hero img {
            max-width: 100%;
            border-radius: 8px;
        }

        .section {
            margin-bottom: 20px;
        }

        .section p {
            margin: 10px 0;
        }

        .sidebar h3 {
            margin-top: 0;
        }

        .countdown {
            background: #e3f2fd;
            color: #569ec5;
            padding: 10px;
            border-radius: 8px;
            text-align: center;
            margin-bottom: 20px;
            font-size: 1.2em;
            font-weight: bold;
        }

        .cta-button {
            display: block;
            text-align: center;
            padding: 10px 15px;
            background: #000000;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: bold;
            margin-top: 20px;
        }

        .cta-button:hover {
            background: #000000;
        }

        a {
            color: #000000;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
        /* Logo styling */
header .logo {
    display: flex;
    align-items: center; /* Aligns text vertically with the image */
    gap: 10px; /* Adds space between the logo and the text */
    font-size: 1.5rem; /* Adjust font size */
    font-weight: bold;
    color: white;
}

header .logo img {
    border-radius: 50%; /* Makes the image circular */
    object-fit: cover;
    width: 70px; /* Width of the logo */
    height: 70px; /* Height of the logo */
}
    </style>
</head>
<body>
    

    <div class="container">
        <div class="main-content">
            <div class="hero">
                <img src="<%= event.img  %>" alt="Event Banner">
                <p><strong><%= event.date.start.toDateString() %> - <%= event.date.end.toDateString() %> | <%= event.venue %></strong></p>
            </div>

            <div class="section">
                <h2>About <%= event.name %></h2>
                <p><%= event.description %></p>
            </div>

            <div class="section">
                <h2>Tracks</h2>
                <ul>
                    <% event.tracks.split(',').forEach(track => { %>
                        <li><strong><%= track %></strong></li>
                    <% }); %>
                </ul>
            </div>

            <div class="section">
                <h2>Rules</h2>
                <ul>
                    <% event.rules.split(',').forEach(rule => { %>
                        <li><%= rule %></li>
                    <% }); %>
                </ul>
            </div>

            <div class="section">
                <h2>Event Details</h2>
                <p><strong>Mode:</strong> <%= event.mode %></p>
                <p><strong>Host:</strong> <%= event.host %></p>
                <p><strong>Event Type:</strong> <%= event.event_type %></p>
                <p><strong>Timezone:</strong> <%= event.timezone %></p>
                <p><strong>Contact:</strong> <%= event.contact %></p>
            </div>
        </div>

        <div class="sidebar">
            
            <div class="section">
                <h3>Announcements</h3>
                <p>Team Leads, stay updated by joining our Discord server! It's the go-to place for all important updates and announcements. Team Members are welcome to join as well and stay connected!</p>
                <p><a href="#">ðŸ”— Join our Discord Community</a></p>
            </div>

            <div class="section">
                <h3>Application</h3>
                <p>Register now before the deadline: <strong>January 25, 2025</strong>. Donâ€™t miss out!</p>
                <a href="<%=event.name  %>" class="cta-button">Register</a>
            </div>

            <div class="section">
                <h3>Contact</h3>
                <p>Email us at <a href="mailto:<%= event.contact_email %>"><%= event.contact_email %></a></p>
            </div>
        </div>
    </div>
</body>
</html>