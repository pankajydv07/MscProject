
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - We're Here to Help</title>
    <link rel="stylesheet" href="/css/contact.css">
</head>
<% layout("/layouts/boilerplate") %>
<body>
    <!-- Header Section -->
    
    <div class="container">
        <section class="get-in-touch">
            <h1>We're Here to Help</h1>
            <p>For any inquiries or support, reach out to us anytime!</p>
            
            <div class="contact-info">
                <div class="info-item">
                    <img src="email-icon.png" alt="Email">
                    <a href="mailto:support@unigate.com">support@unigate.com</a>
                </div>
                <div class="info-item">
                    <img src="phone-icon.png" alt="Phone">
                    <a href="tel:+1-555-0123">+1-555-0123</a>
                </div>
                <div class="info-item">
                    <img src="location-icon.png" alt="Location">
                    <address>123 Market St, San Francisco, CA 94103, United States</address>
                </div>
            </div>
        </section>

        <section class="map-section">
            <div id="map">
            </div>
        </section>

        <section class="contact-form">
            <h2>Contact Us</h2>
            <p>Reach out for support or inquiries anytime.</p>
            
            <form id="contactForm" onsubmit="return validateForm()">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" placeholder="Enter your name" required>
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email" required>
                </div>

                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" placeholder="Type your message" required></textarea>
                </div>

                <div class="form-group checkbox">
                    <input type="checkbox" id="terms" name="terms" required>
                    <label for="terms">I accept the terms</label>
                </div>

                <button type="submit" class="submit-btn">Submit</button>
            </form>
        </section>
    </div>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY"></script>
    <script src="/js/contact.js"></script>
</body>
